{% extends 'SonataBlockBundle:Block:block_base.html.twig' %}

{% block block %}
    {% if settings.title %}
        <h3 class="sonata-media-block-media-title">{{ settings.title }}</h3>
    {% endif %}

    <div class="sonata-media-block-media-container">
        {% if media %}
            {% media media, settings.format %}
        {% else %}
            {# no media selected ... #}
        {% endif %}
    </div>
{% endblock %}
