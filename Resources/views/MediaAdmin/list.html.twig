{% extends 'SonataAdminBundle:CRUD:base_list.html.twig' %}

{% import _self as tree %}
{% macro navigate_child(collection, admin, root, current_category) %}
    {% if root and collection|length == 0 %}
        <div>
            <p class="bg-warning">{{ admin.trans('warning_no_category') }}</p>
        </div>
    {% endif %}
    <ul{% if root %} class="sonata-tree sonata-tree--toggleable js-treeview"{% endif %}>
        {% for element in collection %}
            <li>
                <div class="sonata-tree__item{% if element.id == current_category %} is-active{% endif %}">
                    {% if element.parent %}<i class="fa fa-caret-right" data-treeview-toggler></i>{% endif %}
                    <a class="sonata-tree__item__edit" href="{{ url(app.request.attributes.get('_route'), app.request.query.all|merge({category: element.id})) }}">{{ element.name }}</a>
                </div>

                {% if element.children|length %}
                    {{ _self.navigate_child(element.children, admin, false, current_category) }}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endmacro %}

{% block list_table %}
    <div class="col-xs-6 col-md-3" style="background: #ffffff">
        {{ tree.navigate_child(root_category.children, admin, true, datagrid.values['category']['value']) }}
    </div>
    <div class="col-xs-12 col-md-9">
        {{ parent() }}
    </div>
{% endblock %}