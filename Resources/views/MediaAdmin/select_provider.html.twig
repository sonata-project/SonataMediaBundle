{% extends 'SonataAdminBundle:CRUD:action.html.twig' %}

{% block title %}{% trans from 'SonataMediaBundle' %}title_select_provider{% endtrans %}{% endblock %}

{% block content %}
    <ul>
        {% for code, provider in providers %}
            <li><a href="{{ admin.generateUrl('create', {'provider': provider.name}) }}">{{ provider.name|trans({}, 'SonataMediaBundle') }}</a></li>
        {% else %}
            <li>{% trans from 'SonataMediaBundle' %}no_provider_available{% endtrans %}</li>
        {% endfor %}
    </ul>
{% endblock %}