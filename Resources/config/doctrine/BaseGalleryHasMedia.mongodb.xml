    <mapped-superclass name="Sonata\MediaBundle\Document\BaseGalleryHasMedia">

        <field name="position"   fieldName="position" type="integer" />
        <field name="enabled"    fieldName="enabled"  type="boolean" />

        <field name="updatedAt"          fieldName="updatedAt"     type="timestamp" />
        <field name="createdAt"          fieldName="createdAt"     type="timestamp" />

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>
        
    </mapped-superclass>
</doctrine-mapping>
