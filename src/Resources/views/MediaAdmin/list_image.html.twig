{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
    {% set media = attribute(object, field_description.name) %}

    {% if media is not null %}
        <a href="{{ admin.generateObjectUrl(route, object) }}">
            {{ media_thumbnail(media, 'admin', {'width': 75, 'height': 60}) }}
        </a>
    {% endif %}
{% endblock field %}
