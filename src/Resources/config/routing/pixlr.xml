    <route id="sonata_media_pixlr_edit" path="/pixlr/edit/{id}/{mode}" controller="sonata.media.extra.pixlr::editAction"/>
    <route id="sonata_media_pixlr_target" path="/pixlr/target/{hash}/{id}" controller="sonata.media.extra.pixlr::targetAction"/>
    <route id="sonata_media_pixlr_exit" path="/pixlr/exit/{hash}/{id}" controller="sonata.media.extra.pixlr::exitAction"/>
    <route id="sonata_media_pixlr_open_editor" path="/pixlr/open/{id}" controller="sonata.media.extra.pixlr::openEditorAction"/>
</routes>
